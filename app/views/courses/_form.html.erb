<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h6>Oops! <%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h6>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :year %><br>
    <%= form.number_field :year, id: :course_year, class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-outline-warning'%>
    <%= link_to 'Back', courses_path, class: 'btn btn-outline-dark' %>
  </div>
  
<% end %>
